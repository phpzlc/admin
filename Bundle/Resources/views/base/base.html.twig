    <!--解决element-ui页面闪现的问题-->
    <style>
        body {
            background: #fff;
        }
        #main-content {
            display: none;
        }
    </style>
    <script>
        setTimeout(function () {
            $('#main-content').show();
            $('body').css('background-color', '#0c0d0d');
        }, 1000)
    </script>

